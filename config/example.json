    },

    {   "name": "history",
        "enabled": "on"
    },

    {   "name": "report",
        "enabled": "on",
        "navbar": "on"
    },

    { "name": "search",
      "enabled" : "on"
    },

    {   "name": "upload",
        "enabled": "on",
